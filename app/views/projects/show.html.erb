<p style="color: green"><%= notice %></p>

<div class="border_main">
  <div class="detail_content">
  <center>
  <h1 style="margin-top: 0;">
    <%= @project.tittle %>
  </h1>    
  <hr>
  </center>


  <div class="detail_content">
    <div class="created_at">
      <strong>Started : </strong>
      <span>
        <%= @project.created_at.to_date %>
      </span>
    </div>

    <div class="deadline">
      <strong>Deadline : </strong>
      <span>
        <%= @project.deadline %>
      </span>
    </div>

    <div class="status">
      <strong>Status : </strong>
      <span class="<%= @project.status_warna_text %>" style="font-weight: bold;">
        <%= @project.status_text %>
      </span>
    </div>
  </div>

  <div class="description_border">
    <h3>Description :</h3>
    <p>
      <%= @project.description %>
    </p>
  </div>
</div>



  <div style="display: flex; ">
    <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-primary" %>
    <%= link_to "Back to projects", projects_path, class: "btn btn-primary" %>

    <%= button_to "Delete", @project, method: :delete, class: "btn btn-primary btn_hapus" %>
  </div>

</div>

